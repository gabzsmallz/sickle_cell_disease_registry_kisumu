{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Triage creation
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">


                            <table>
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ triage.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Visitid</th>
                                        <td>{{ triage.visitId }}</td>
                                    </tr>
                                    <tr>
                                        <th>Weight</th>
                                        <td>{{ triage.weight }}</td>
                                    </tr>
                                    <tr>
                                        <th>Height</th>
                                        <td>{{ triage.height }}</td>
                                    </tr>
                                    <tr>
                                        <th>Bmi</th>
                                        <td>{{ triage.bmi }}</td>
                                    </tr>
                                    <tr>
                                        <th>Bloodpressure</th>
                                        <td>{{ triage.bloodPressure }}</td>
                                    </tr>
                                    <tr>
                                        <th>Temperature</th>
                                        <td>{{ triage.temperature }}</td>
                                    </tr>
                                    <tr>
                                        <th>Prothrombintime</th>
                                        <td>{{ triage.prothrombinTime }}</td>
                                    </tr>
                                    <tr>
                                        <th>Symptoms</th>
                                        <td>{{ triage.symptoms }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            <ul>
                                <li>
                                    <a href="{{ path('triage_index') }}">Back to the list</a>
                                </li>
                                <li>
                                    <a href="{{ path('triage_edit', { 'id': triage.id }) }}">Edit</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                        <input type="submit" value="Delete">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
