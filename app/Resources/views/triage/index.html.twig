{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Triage list
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <table class="table table-striped table-bordered table-hover" id="dataTables">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Visitid</th>
                                        <th>Weight</th>
                                        <th>Height</th>
                                        <th>Bmi</th>
                                        <th>Bloodpressure</th>
                                        <th>Temperature</th>
                                        <th>Prothrombintime</th>
                                        <th>Symptoms</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for triage in triages %}
                                    <tr>
                                        <td><a href="{{ path('triage_show', { 'id': triage.id }) }}">{{ triage.id }}</a></td>
                                        <td>{{ triage.visitId }}</td>
                                        <td>{{ triage.weight }}</td>
                                        <td>{{ triage.height }}</td>
                                        <td>{{ triage.bmi }}</td>
                                        <td>{{ triage.bloodPressure }}</td>
                                        <td>{{ triage.temperature }}</td>
                                        <td>{{ triage.prothrombinTime }}</td>
                                        <td>{{ triage.symptoms }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('triage_show', { 'id': triage.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('triage_edit', { 'id': triage.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <ul>
                                <li>
                                    <a href="{{ path('triage_new') }}">Create a new triage</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $(document).ready(function() {
        $('#dataTables').DataTable({
            responsive: true
        });
    });
    </script>
{% endblock %}