{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Appointment
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">


                            <table>
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ appointment.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Appointmentdate</th>
                                        <td>{% if appointment.appointmentDate %}{{ appointment.appointmentDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    </tr>
                                    <tr>
                                        <th>Appointmenttype</th>
                                        <td>{{ appointment.appointmentType }}</td>
                                    </tr>
                                    <tr>
                                        <th>Patientid</th>
                                        <td>{{ appointment.patientId }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            <ul>
                                <li>
                                    <a href="{{ path('appointments_index') }}">Back to the list</a>
                                </li>
                                <li>
                                    <a href="{{ path('appointments_edit', { 'id': appointment.id }) }}">Edit</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                        <input type="submit" value="Delete">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
