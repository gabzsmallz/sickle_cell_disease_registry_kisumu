{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Surgical history list
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <table class="table table-striped table-bordered table-hover" id="dataTables">

                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Surgeryconducted1</th>
                                        <th>Surgeryconducted1date</th>
                                        <th>Surgeryconducted2</th>
                                        <th>Surgeryconducted2date</th>
                                        <th>Surgeryconducted3</th>
                                        <th>Surgeryconducted3date</th>
                                        <th>Surgeryconducted4</th>
                                        <th>Surgeryconducted4date</th>
                                        <th>Patientid</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for surgicalHistory in surgicalHistories %}
                                    <tr>
                                        <td><a href="{{ path('surgicalhistory_show', { 'id': surgicalHistory.id }) }}">{{ surgicalHistory.id }}</a></td>
                                        <td>{{ surgicalHistory.surgeryConducted1 }}</td>
                                        <td>{% if surgicalHistory.surgeryConducted1Date %}{{ surgicalHistory.surgeryConducted1Date|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ surgicalHistory.surgeryConducted2 }}</td>
                                        <td>{% if surgicalHistory.surgeryConducted2Date %}{{ surgicalHistory.surgeryConducted2Date|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ surgicalHistory.surgeryConducted3 }}</td>
                                        <td>{% if surgicalHistory.surgeryConducted3Date %}{{ surgicalHistory.surgeryConducted3Date|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ surgicalHistory.surgeryConducted4 }}</td>
                                        <td>{% if surgicalHistory.surgeryConducted4Date %}{{ surgicalHistory.surgeryConducted4Date|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ surgicalHistory.patientId }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('surgicalhistory_show', { 'id': surgicalHistory.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('surgicalhistory_edit', { 'id': surgicalHistory.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <ul>
                                <li>
                                    <a href="{{ path('surgicalhistory_new') }}">Create a new surgicalHistory</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $(document).ready(function() {
        $('#dataTables').DataTable({
            responsive: true
        });
    });
    </script>
{% endblock %}