{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Meds list
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <table class="table table-striped table-bordered table-hover" id="dataTables">

                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Careid</th>
                                        <th>Medsname</th>
                                        <th>Medsdose</th>
                                        <th>Medscomments</th>
                                        <th>Medsdailydose</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for med in meds %}
                                    <tr>
                                        <td><a href="{{ path('meds_show', { 'id': med.id }) }}">{{ med.id }}</a></td>
                                        <td>{{ med.careId }}</td>
                                        <td>{{ med.medsName }}</td>
                                        <td>{{ med.medsDose }}</td>
                                        <td>{{ med.medsComments }}</td>
                                        <td>{{ med.medsDailyDose }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('meds_show', { 'id': med.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('meds_edit', { 'id': med.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <ul>
                                <li>
                                    <a href="{{ path('meds_new') }}">Create a new med</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $(document).ready(function() {
        $('#dataTables').DataTable({
            responsive: true
        });
    });
    </script>
{% endblock %}