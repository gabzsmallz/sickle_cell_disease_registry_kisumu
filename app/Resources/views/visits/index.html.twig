{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Visit list
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <table class="table table-striped table-bordered table-hover" id="dataTables">

                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Date of visit</th>
                            <th>Type of visit</th>
                            <th>Patient</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for visit in visits %}
                        <tr>
                            <td><a href="{{ path('visits_show', { 'id': visit.id }) }}">{{ visit.id }}</a></td>
                            <td>{% if visit.dateOfVisit %}{{ visit.dateOfVisit|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ visit.typeOfVisit }}</td>
                            <td>{{ visit.patientId }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('visits_show', { 'id': visit.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('visits_edit', { 'id': visit.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('visits_new') }}">Create a new visit</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $(document).ready(function() {
        $('#dataTables').DataTable({
            responsive: true
        });
    });
    </script>
{% endblock %}