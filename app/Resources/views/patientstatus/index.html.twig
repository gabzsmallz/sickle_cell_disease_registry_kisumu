{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Patient status list
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <table class="table table-striped table-bordered table-hover" id="dataTables">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Statustype</th>
                                        <th>Statuscomments</th>
                                        <th>Statusdate</th>
                                        <th>Patientid</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for patientStatus in patientStatuses %}
                                    <tr>
                                        <td><a href="{{ path('patientstatus_show', { 'id': patientStatus.id }) }}">{{ patientStatus.id }}</a></td>
                                        <td>{{ patientStatus.statusType }}</td>
                                        <td>{{ patientStatus.statusComments }}</td>
                                        <td>{% if patientStatus.statusDate %}{{ patientStatus.statusDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ patientStatus.patientId }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('patientstatus_show', { 'id': patientStatus.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('patientstatus_edit', { 'id': patientStatus.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <ul>
                                <li>
                                    <a href="{{ path('patientstatus_new') }}">Create a new patientStatus</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $(document).ready(function() {
        $('#dataTables').DataTable({
            responsive: true
        });
    });
    </script>
{% endblock %}