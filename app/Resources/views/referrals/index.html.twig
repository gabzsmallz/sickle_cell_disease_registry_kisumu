{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Referral list
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <table class="table table-striped table-bordered table-hover" id="dataTables">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Referralfrom</th>
                                        <th>Referraldate</th>
                                        <th>Referringdoctor</th>
                                        <th>Patientid</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for referral in referrals %}
                                    <tr>
                                        <td><a href="{{ path('referrals_show', { 'id': referral.id }) }}">{{ referral.id }}</a></td>
                                        <td>{{ referral.referralFrom }}</td>
                                        <td>{% if referral.referralDate %}{{ referral.referralDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ referral.referringDoctor }}</td>
                                        <td>{{ referral.patientId }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('referrals_show', { 'id': referral.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('referrals_edit', { 'id': referral.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <ul>
                                <li>
                                    <a href="{{ path('referrals_new') }}">Create a new referral</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $(document).ready(function() {
        $('#dataTables').DataTable({
            responsive: true
        });
    });
    </script>
{% endblock %}