{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Referral
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">


                            <table>
                                <tbody>
                                    <tr>
                                        <th>#</th>
                                        <td>{{ referral.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Referralfrom</th>
                                        <td>{{ referral.referralFrom }}</td>
                                    </tr>
                                    <tr>
                                        <th>Referraldate</th>
                                        <td>{% if referral.referralDate %}{{ referral.referralDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    </tr>
                                    <tr>
                                        <th>Referringdoctor</th>
                                        <td>{{ referral.referringDoctor }}</td>
                                    </tr>
                                    <tr>
                                        <th>Patientid</th>
                                        <td>{{ referral.patientId }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            <ul>
                                <li>
                                    <a href="{{ path('referrals_index') }}">Back to the list</a>
                                </li>
                                <li>
                                    <a href="{{ path('referrals_edit', { 'id': referral.id }) }}">Edit</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                        <input type="submit" value="Delete">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
