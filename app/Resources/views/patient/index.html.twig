{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Patients list
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Martial status</th>
                                <th>County of origin</th>
                                <th>Sub-County of origin</th>
                                <th>Residence</th>
                                <th>Contact</th>
                                <th>Noo of siblings</th>
                                <th>Registration no</th>
                                <th>Date of diagnosis</th>
                                <th>Sickle cell type</th>
                                <th>Contact person</th>
                                <th>Contact person no</th>
                                <th>Contact person relation</th>
                                <th>Is_active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for patient in patients %}
                            <tr>
                                <td><a href="{{ path('patient_show', { 'id': patient.id }) }}">{{ patient.id }}</a></td>
                                <td>{{ patient.name }}</td>
                                <td>{{ patient.age }}</td>
                                <td>{{ patient.gender }}</td>
                                <td>{{ patient.martialstatus }}</td>
                                <td>{{ patient.countyoforigin }}</td>
                                <td>{{ patient.subcountyoforigin }}</td>
                                <td>{{ patient.residence }}</td>
                                <td>{{ patient.contact }}</td>
                                <td>{{ patient.noofsiblings }}</td>
                                <td>{{ patient.registrationno }}</td>
                                <td>{% if patient.dateOfDiagnosis %}{{ patient.dateOfDiagnosis|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ patient.sicklecelltype }}</td>
                                <td>{{ patient.contactperson }}</td>
                                <td>{{ patient.contactpersonno }}</td>
                                <td>{{ patient.contactpersonrelation }}</td>
                                <td>{{ patient.isactive }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('patient_show', { 'id': patient.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('patient_edit', { 'id': patient.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <ul>
                        <li>
                            <a href="{{ path('patient_new') }}">Create a new patient</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $(document).ready(function() {
        $('#dataTables').DataTable({
            responsive: true
        });
    });
    </script>
{% endblock %}
