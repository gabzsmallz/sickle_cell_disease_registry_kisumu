{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Patient
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ patient.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ patient.name }}</td>
                        </tr>
                        <tr>
                            <th>Age</th>
                            <td>{{ patient.age }}</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>{{ patient.gender }}</td>
                        </tr>
                        <tr>
                            <th>Martial_status</th>
                            <td>{{ patient.martialstatus }}</td>
                        </tr>
                        <tr>
                            <th>County_of_origin</th>
                            <td>{{ patient.countyoforigin }}</td>
                        </tr>
                        <tr>
                            <th>Sub_county_of_origin</th>
                            <td>{{ patient.subcountyoforigin }}</td>
                        </tr>
                        <tr>
                            <th>Residence</th>
                            <td>{{ patient.residence }}</td>
                        </tr>
                        <tr>
                            <th>Contact</th>
                            <td>{{ patient.contact }}</td>
                        </tr>
                        <tr>
                            <th>No_of_siblings</th>
                            <td>{{ patient.noofsiblings }}</td>
                        </tr>
                        <tr>
                            <th>Registration_no</th>
                            <td>{{ patient.registrationno }}</td>
                        </tr>
                        <tr>
                            <th>Dateofdiagnosis</th>
                            <td>{% if patient.dateOfDiagnosis %}{{ patient.dateOfDiagnosis|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Sickle_cell_type</th>
                            <td>{{ patient.sicklecelltype }}</td>
                        </tr>
                        <tr>
                            <th>Contact_person</th>
                            <td>{{ patient.contactperson }}</td>
                        </tr>
                        <tr>
                            <th>Contact_person_no</th>
                            <td>{{ patient.contactpersonno }}</td>
                        </tr>
                        <tr>
                            <th>Contact_person_relation</th>
                            <td>{{ patient.contactpersonrelation }}</td>
                        </tr>
                        <tr>
                            <th>Is_active</th>
                            <td>{{ patient.isactive }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('patient_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('patient_edit', { 'id': patient.id }) }}">Edit</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
